{% extends "layout.html" %} 
{% block content %}
<div id="homeBody">
<img
  src="/images/titles/br/home.png"
  alt="Title logo - home"
  class="titleLogo"
/>
<h1>Faltam <span id="daysLeft">daysLeft</span> dias</h1>
  <img
    src="/images/home/home.jpg"
    alt="Welcome picture on Thibault and Barbara wedding's site"
  />
</div>
<script>
  const updateCountDown = function() {
    // Jours Restants
    const weddingDate = new Date(2023, 4, 20);
    const today = new Date();
    const elapsedTime = weddingDate.getTime() - today.getTime();
    const daysLeft = Math.floor(elapsedTime / (1000 * 3600 * 24));

    document.getElementById("daysLeft").innerText = daysLeft;
    return daysLeft
  }

  updateCountDown();
</script>
{% endblock %}
